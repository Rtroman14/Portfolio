<section class="section-contact" id="contact">
    <div class="section-headings" data-aos="fade-in">
        <h4 class="heading-tertiary">
            Contact
        </h4>
        <h2 class="heading-secondary">
            Get in touch
        </h2>
    </div>
    <div class="contact">
        <div class="contact__form">
            <form action="#" class="form">
                <div class="form__inputs" data-aos="zoom-in">
                    <div class="form__name">
                        <input
                            class="form__input"
                            type="text"
                            name="name"
                            placeholder="Name"
                            required
                        />
                    </div>
                    <div class="form__email">
                        <input
                            class="form__input"
                            type="email"
                            name="email"
                            placeholder="Email"
                            required
                        />
                    </div>
                    <div class="form__text">
                        <textarea
                            class="form__input"
                            type="text"
                            name="message"
                            placeholder="Your message"
                            required
                            cols="30"
                            rows="10"
                        ></textarea>
                    </div>
                </div>
                <div class="form__btn" data-aos="fade-right">
                    <button href="#" class="btn">Send Message</button>
                </div>
            </form>
        </div>
    </div>
</section>

